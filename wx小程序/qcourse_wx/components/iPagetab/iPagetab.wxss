.iPagetab {
  border: 2rpx solid #DEDEDE;
  background: #fff;
}

.iPagetab image{
  width: 100%;
}
  
.iPagetab swiper{
  height: 740rpx;
}
  
.iPagetab .tab{
  display: inline-block;
  width: 33%;
  height: 68rpx;
  border: 2rpx solid #ddd;
  border-top: none;
  background: #f5f5f5;
  text-align: center;
  line-height: 68rpx;
  font-size: 32rpx;
  color: #333333;
}

.iPagetab .tab:first-child {
  border: none;
  border-bottom: 2rpx solid #ddd;
}

.iPagetab .tab:last-child {
  border: none;
  border-bottom: 2rpx solid #ddd;
}

.iPagetab .tabTextBox{
  width: 100%;
}
  
.iPagetab .tabText{
  padding: 0 24rpx 24rpx 24rpx;
  margin: 20rpx 0;
}

.iPagetab .tab.tabActive {
  background: #fff;
  border-bottom: none;
}