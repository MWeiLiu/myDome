
@import '../../utils/common/common.wxss';

.iPageturning {
    width: 100%;
    margin: 50rpx auto;
    position: relative;
    overflow-x: hidden;
    overflow-y: scroll;
    box-shadow: 0 0 6rpx 0 #DEDEDE;
}

.iPageturningBox {
    width: 100%;
    height: 512rpx;
}

.iPageturningBox .face,
.iPageturningBox .back {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.iPageturning .iPageturningText {
    width: 100%;
    height: 100%;
    padding: 40rpx;
    overflow-x: hidden;
    font-size: 28rpx;
    color: #333333;
    letter-spacing: 1.6rpx;
    line-height: 56rpx;
}

.iPageturning image {
    width: 100%;
    height: 100%;
    z-index: 1;
}

.iPageturning .clickMe {
    width: 68rpx;
    height: 68rpx;
    padding-left: 6rpx;
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    border-radius: 50%;
    background: rgba(0, 57, 137, 0.52);
    font-size: 36rpx;
    color: #FFFFFF;
    letter-spacing: 2.06px;
    text-align: center;
    line-height: 66rpx;
    font-weight: 600;
    z-index: 10;
}

.iPageturning .hr {
    width: 672rpx;
    height: 8rpx;
    margin: 0 auto;
    background: #003989;
    border-radius: 100px;
}
  