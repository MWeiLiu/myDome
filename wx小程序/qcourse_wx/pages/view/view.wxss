

/**翻页格**/

.fzkp{
  width: 90%;
  height: 200px;
  margin: 0 auto;
  position: relative;
}

.fzkp .text{
  width:100%;
  height:100%;
  border: 1px solid #f1f2f3;
  background: #f3f3f3;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}

.fzkp image{
  width:100%;
  height: 200px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.fan{
  width: 30px;
  height: 30px;
  position: absolute;
  right: 10px;
  bottom: 10px;
  border-radius: 50%;
  background: #efff00;
  color: #ff0052;
  text-align: center;
  line-height: 30px;
  z-index: 10;
}

/**tab页**/

.taby{
  width: 90%;
  height: 500px;
  margin: 10px auto;
  overflow: hidden;
}

.taby image{
  width: 100%;
}

.taby swiper{
  height: 300px;
}

.tab{
  display: inline-block;
  width:32%;
  height:40px;
  border: 1px solid #808080;
  background: #f1f2f3;
  text-align: center;
  line-height: 40px;
}

.tab:nth-child(2){
  margin: 0 2%;
}

.tabTextBox{
  width: 100%;
}

.tabText{
  width: 100%;
  border: 1px solid #f1f2f3;
  margin-top: 10px;
}

.tabActive {
  border-color: #ff0052;
}