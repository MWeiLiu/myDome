.i_head{
  display: flex;
  align-items: center;
  border-bottom: solid 1px #e5e5e5;
  padding: 0;
}
.i_search{
  flex: 1;
  position: relative;
  border-left: solid 1px #e5e5e5;
}
.i_search input{
  height: 35px;
  line-height: 35px;
  padding-right: 40px;
  padding-left: 10px;
}
.i_search .icon-search{
  position: absolute;
  right: 0;
  top: 0;
}
.t_sort{
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
  border-bottom: solid 1px #e5e5e5;
  position: relative;
}
.t_sort .t_sort_top{
  position: relative;
  flex: 1;
}
.t_sort .t_sort_list{
  width: 100%;
  position: absolute;
  top: 31px;
  left: 0;
  text-align: center;
  background: #fff;
}
.t_sort .t_sort_area{
  width: 80%;
  position: absolute;
  right: 0;
  top: 31px;
  background: #fff;
  overflow: hidden;
  padding: 10px 0 10px 10px;
}
.t_sort .t_sort_area .t_sort_city{
  float: left;
  padding: 5px;
  border: solid 1px #e5e5e5;
  margin-right: 10px;
  margin-bottom: 10px;
}
.t_list{
  padding: 10px;
}
.t_list_cont{
  border-bottom: solid 1px #e5e5e5;
}
.t_list_top{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
}
.t_list_top .t_list_name{
  display: flex;
  align-items: center;
}
.t_list_top image{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 5px;
}
.t_list_date{
  color: blue;
}
.t_list_price b{
  font-size: 18px;
  color: #ff0000;
}
.t_list_desc{
  margin: 5px 0;
}
.t_list_card{
  width: 100%;
  height: 250rpx;
  position: relative;
}
.t_list_card image{
  width: 100%;
  height: 250rpx;
}
.t_list_card_desc{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 250rpx;
  color: #fff;
}
.t_list_card_desc view{
  padding: 3px 10px;
}
.t_list_card_desc span{
  font-size: 18px;
}
.t_list_card_ft{
  text-align: right;
}
.t_list_card_adr{
  margin: 20rpx 0 0;
}
.t_list_adr{
  text-align: right;
}
.t_btn{
  position: fixed;
  right: 10px;
  bottom: 10px;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 16px;
  border: solid 1px #e5e5e5;
}